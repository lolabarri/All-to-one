<h2>Signup</h2>

<form action="/cars/new" method="POST" id="form-container">
  <label for="carMake">Car make</label>
  <input id="carMake" type="text" name="carMake" placeholder="Jon Snow">
  <label for="model">Model</label>
  <input id="model" type="text" name="model" placeholder="jonsnow@thrones.com">

  <br><br>

  <label for="licensePlate">License plate</label>
  <input id="licensePlate" type="text" name="licensePlate" placeholder="Your licensePlate">
  <label for="fuel">Fuel</label>
  <input id="fuel" type="date" name="fuel">
  <label for="purchaseYear">Purchase Year</label>
  <input id="purchaseYear" type="text" name="purchaseYear" placeholder="2005">
  <label for="insurance">Kind of insurance</label>
  <input id="insurance" type="text" name="insurance" placeholder="2005">
  <label for="other">Any interesting things to know</label>
  <input id="other" type="text" name="other" placeholder="2005">
  <br>
  {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <button>Create car</button>

 
</form>