<h2>Signup</h2>

<form action="/auth/signup" method="POST" id="form-container">
  <label for="name">Name and last name</label>
  <input id="name" type="text" name="name" placeholder="Coqueto Poliqueto">
  <label for="email">Email</label>
  <input id="email" type="text" name="email" placeholder="coqueto@poliqueto.com">

  <br><br>

  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your password">
  <label for="dateBirth">Date of birth</label>
  <input id="dateBirth" type="date" name="dateBirth">
  <label for="yearsExperience">Date of driving license</label>
  <input id="yearsExperience" type="date" name="yearsExperience" placeholder="">
  <br>
  {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <button>Create account</button>

  <p class="account-message">
    Do you already have an account?
    <a href="/auth/login">Login</a>
  </p>
</form>